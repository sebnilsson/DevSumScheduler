@model ScheduleItem

<div class="item-title">@Html.Raw(Model.Title)</div>

@if (!string.IsNullOrWhiteSpace(Model.Speaker) || !string.IsNullOrWhiteSpace(Model.SpeakerUrl))
{
    <div class="item-speaker">
        @if (!string.IsNullOrWhiteSpace(Model.SpeakerUrl))
        {
            <a href="@Model.SpeakerUrl"
                data-fancybox-href="@Url.HttpRouteUrl("ApiSpeakers", new { devSumSpeakerUrl = Model.SpeakerUrl })"
                class="fancybox">
                @Html.Raw(Model.Speaker)
            </a>
        }
        else if (!string.IsNullOrWhiteSpace(Model.Speaker))
        {
            @Html.Raw(Model.Speaker)
        }
    </div>
}